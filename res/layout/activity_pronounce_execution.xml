<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
  
<TextView  
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content" 
    android:textSize="15sp" 
    android:text="mock_title"
    android:paddingLeft="5sp"
/>

<!--  ResultArea -->
<LinearLayout
    android:id="@+id/PronounceResultContainer"
  android:visibility="gone"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:orientation="vertical"
  android:background="@drawable/content_box"
  android:layout_gravity="center"
  android:layout_marginTop="10sp"
  android:padding="10sp"
 >
<FrameLayout
  android:layout_width="200sp"
  android:layout_height="fill_parent"
  android:padding="10sp"
 > 
<LinearLayout
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_gravity="center_horizontal"
  android:orientation="horizontal"
 > 
<ImageView 
    android:id="@+id/PronounceResultIcon"
    android:layout_width="30sp"
    android:layout_height="30sp"
    android:src="@drawable/icon_correct"
/>
<TextView  
    android:id="@+id/PronounceResultTitle"
    android:layout_width="wrap_content" 
    android:layout_height="30sp" 
    android:textSize="25sp" 
    android:text="@string/activity_pronounce_result_title"
    android:paddingLeft="5sp"
/>
</LinearLayout>
</FrameLayout>

<TextView  
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content" 
    android:textSize="15sp" 
    android:text="@string/activity_pronounce_result_your_input"
    android:paddingLeft="5sp"
/>
<TextView  
    android:id="@+id/PronounceResultInput"
    android:textSize="15sp" 
    android:paddingLeft="20sp"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="mock_string"
/>
</LinearLayout>
<!--  /ResultArea -->

<LinearLayout
  android:orientation="horizontal"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_gravity="center"
  android:paddingTop="10sp"
>
<ImageButton
    android:id="@+id/layout_pronounce_exec_buttton"
    android:src="@drawable/button_do_pronounce"
    android:background="#00000000" 
    android:layout_height="66px" android:layout_width="190px"
    android:paddingRight="20sp"
/>

<ImageButton
    android:id="@+id/layout_pronounce_hear_buttton"
    android:src="@drawable/button_hear_pronounce"
    android:background="#00000000" 
    android:layout_height="66px" android:layout_width="150px"
/>
</LinearLayout>
  
</LinearLayout>